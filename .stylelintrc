{
  "extends": [
    "stylelint-config-sass-guidelines",
    "stylelint-config-recess-order"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "max-nesting-depth": 2,
    "property-no-vendor-prefix": null,
    "order/properties-alphabetical-order": null,
    "color-named": "always-where-possible"
  }
}
